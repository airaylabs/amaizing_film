{
  "name": "Character Designer",
  "description": "Design characters from description with multiple variations",
  "version": "1.0",
  "author": "raymAIzing film",
  "category": "Pre-Production",
  "icon": "ðŸ‘¤",
  "inputs": [
    {
      "id": "name",
      "type": "text",
      "label": "Character Name",
      "placeholder": "Maya Chen"
    },
    {
      "id": "role",
      "type": "select",
      "label": "Role",
      "options": ["Protagonist", "Antagonist", "Supporting", "Love Interest", "Mentor", "Comic Relief", "Mysterious Stranger"]
    },
    {
      "id": "age",
      "type": "select",
      "label": "Age",
      "options": ["Child (5-12)", "Teen (13-19)", "Young Adult (20-30)", "Adult (30-45)", "Middle Age (45-60)", "Elder (60+)"]
    },
    {
      "id": "gender",
      "type": "select",
      "label": "Gender",
      "options": ["Male", "Female", "Androgynous", "Non-binary"]
    },
    {
      "id": "bodyType",
      "type": "select",
      "label": "Body Type",
      "options": ["Slim/Lean", "Athletic", "Average", "Muscular", "Curvy", "Petite", "Tall/Lanky", "Heavy"]
    },
    {
      "id": "physical",
      "type": "text",
      "label": "Physical Description",
      "multiline": true,
      "placeholder": "Short black hair, brown eyes, small scar on eyebrow..."
    },
    {
      "id": "costume",
      "type": "text",
      "label": "Costume/Clothing",
      "multiline": true,
      "placeholder": "Dark leather jacket, white t-shirt, black jeans..."
    },
    {
      "id": "expression",
      "type": "select",
      "label": "Expression",
      "options": ["Neutral", "Happy/Smiling", "Sad/Tearful", "Angry/Furious", "Surprised", "Scared", "Determined", "Confused", "Loving", "Mischievous"]
    },
    {
      "id": "style",
      "type": "select",
      "label": "Art Style",
      "options": ["Photorealistic", "Cinematic", "Anime/Manga", "Digital Art", "Concept Art", "Fantasy Art", "3D Render"]
    },
    {
      "id": "lighting",
      "type": "select",
      "label": "Lighting",
      "options": ["Natural Daylight", "Golden Hour", "Studio Lighting", "Dramatic Side Light", "Neon/Cyberpunk", "Moonlight"]
    }
  ],
  "steps": [
    {
      "id": "generatePrompt",
      "type": "template",
      "template": "Character portrait of {{name}}, {{age}} {{gender}}, {{bodyType}} build. {{physical}}. Wearing: {{costume}}. Expression: {{expression}}. {{style}} style, {{lighting}} lighting, highly detailed character design, professional quality, full character sheet with front and side view"
    },
    {
      "id": "generateCharacter",
      "type": "imagen",
      "model": "imagen-3",
      "prompt": "{{generatePrompt.output}}",
      "aspectRatio": "1:1",
      "numberOfImages": 4
    }
  ],
  "outputs": [
    {
      "id": "characterDesigns",
      "type": "imageGallery",
      "label": "Character Designs",
      "source": "generateCharacter"
    }
  ]
}
